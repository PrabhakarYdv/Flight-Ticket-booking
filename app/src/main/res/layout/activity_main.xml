<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#551947"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/arrow" />

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="31dp"
        android:layout_toRightOf="@id/arrow"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="Fly to Seoul"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/user_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/arrow"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/user_logo" />

    <TextView

        android:id="@+id/text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/user_logo"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/user_logo"
        android:fontFamily="@font/poppins_medium"
        android:text="1  Adult, Economy"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <View
        android:id="@+id/line_1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/user_logo"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF" />

    <ImageView
        android:id="@+id/location_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_1"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/location_logo" />

    <TextView

        android:id="@+id/text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/location_logo"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/location_logo"
        android:fontFamily="@font/poppins_medium"
        android:text="Seoul, Korea"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <View
        android:id="@+id/line_2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/location_logo"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF" />

    <ImageView
        android:id="@+id/aeroplane_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_2"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/areoplane_logo" />

    <TextView

        android:id="@+id/text_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/aeroplane_logo"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/location_logo"
        android:fontFamily="@font/poppins_medium"
        android:text="Choose Destination"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <View
        android:id="@+id/line_3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/aeroplane_logo"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF" />

    <ImageView
        android:id="@+id/calender_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_3"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/calendar_logo" />

    <TextView

        android:id="@+id/text_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/calender_logo"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/calender_logo"
        android:fontFamily="@font/poppins_medium"
        android:text="SChoose Destination"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <View
        android:id="@+id/line_4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/calender_logo"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_4"
        android:layout_marginTop="140dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/tagLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Explore flights by destination"
            android:textColor="#C2C2C2"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/photo_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tagLine"
            android:layout_margin="15dp"
            android:src="@drawable/khumbu_valley" />

        <TextView

            android:id="@+id/pic_1_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tagLine"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/photo_1"
            android:fontFamily="@font/roboto"
            android:text="Khumbu Valley, Nepal "
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pic_1_desc"
            android:layout_toRightOf="@id/photo_1"
            android:fontFamily="@font/roboto"
            android:text="NonStop - 5h 16m+"
            android:textSize="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/photo_1"
            android:layout_marginHorizontal="15dp"

            android:background="#C2C2C2" />


        <ImageView
            android:id="@+id/photo_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/photo_1"
            android:layout_margin="15dp"
            android:layout_marginTop="50dp"
            android:paddingBottom="10dp"
            android:src="@drawable/maldives" />

        <TextView

            android:id="@+id/pic_2_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/photo_1"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/photo_2"
            android:fontFamily="@font/roboto"
            android:text="Maldives, South Asia"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pic_2_desc"
            android:layout_toRightOf="@id/photo_2"
            android:fontFamily="@font/roboto"
            android:text="NonStop - 8h 24m+"
            android:textSize="16dp" />


    </RelativeLayout>

</RelativeLayout>